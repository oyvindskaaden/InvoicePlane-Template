.clearfix:after { content: "";
    display: table;
    clear: both
}
a {
    color: #375bc8;
    text-decoration: underline
}
body {
    position: relative;
    width: 21cm;
    height: 29.7cm;
    margin: 0 auto;
    color: #3A3A3A;
    background: #FFFFFF;
    font-family: sans-serif;
    font-size: 12px;
    margin-top: 1;
}
header {
    padding: 5px 0;
    margin-bottom: 0px
}
#logo {
    text-align: left;
    float: left;
    /*margin-bottom: 4px;*/
    height: 1cm;
}
#invoice-logo {
    max-height: 90px;
    text-align: right
}
.invoice-title {
    color: #375bc8;
    font-size: 2em;
    line-height: 1.4em;
    font-weight: normal;
    margin: 10px 0
}
#company {
    float: right;
    text-align: right;
    width: 50%
}
#client {
    float: left;
    width: 50%;
    margin-right: 5%
}
.invoice-details {
    text-align: right
}
.invoice-details table {
    border-collapse: collapse;
    border-spacing: 0;
    text-align: right;
    width: 40%;
    margin: 0 0 0 auto;
    font-size: 12px
}
.invoice-details table td {
    width: auto;
    margin: 0;
    padding: 0 0 0.5em 0
}
table.item-table {
    width: 100%;
    border-collapse: collapse;
    border-spacing: 0;
    margin-bottom: 20px;
    font-size: 12px;
    table-layout: fixed;
}
table.item-table tr:nth-child(2n-1) td {
    background: #F6F6F6
}
table.item-table th {
    /*padding: 10px 15px;*/
    border-bottom: 1px solid #606060;
    white-space: nowrap;
    text-align: left
}
table.item-table th.text-right {
    text-align: right
}
table.item-table td {
    padding: 10px 15px
}
table.item-table .invoice-sums {
    text-align: right;
    border-top: 1px solid #333
}
table.item-table th.item-total-gp {
    width: 100px
}
table.item-table th.item-price-gp {
    width: 75px
}
table.item-table th.item-amount-gp {
    width: 75px
}
table.item-table th.item-name-gp {
    width: auto
}
footer {
    color: #878686;
    width: 100%;
    /*border-top: 2px solid #878686;*/
    padding: 8px 0
}
.text-right {
    text-align: right
}
.text-red {
    color: #ea5340
}
.text-green {
    color: #77b632
}
#page {
	page-break-after: always;
}
table.info-table {
    width: 100;
}
table.info {
    float: right;
}
td.info {
    width: 50px;
}
#fat {
	height: 2px;
	color: #666;
}
#toptextL {
    width: 70%;
    float: left;
}
#toptextR {
    width: 30%;
    float: right;
}
#project {
	width: 100%;
}
#clientInfo {
	width: 100%;
	height: auto;
}
#lineUnderL, #lineUnderR {
	width: 200px
}
#lineUnderR, #utleier {
	clear: both;
}
#lineUnderR {
	text-align:right;
	float: right;
	position: right;
}
@page {
	header: html_header;
	margin-top: 20;
	margin-header: 50;
	footer: html_footer;
}
#pageHeader {
    	padding: 5px 0;
    	margin-bottom: 0px;
    	height: 100px;
}
table.signature {
    width: 100%;
}
#signL {
    text-align: left;
    width: 35%;
}
#signC {
    width: 30%;
}
#signR {
    text-align: right;
    width: 35%;
}
div.sign {
    page-break-inside: avoid;
}
